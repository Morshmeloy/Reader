package com.company;


import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.io.LineNumberReader;
import java.util.Scanner;

public class FileNumberOf extends SCANNER {
    int FileNumberOfWords;
    int FileNumberOfLetters;
    int FileNumberOfLettersWithSpace;
    int FileNumberOfLines;
    int FileNumberOfDots;
    int FileNumberOfSpace;
    int FileNumberOfYourSimbol;


    public int NumberOfWords(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfWords = 0;
            while (scan.hasNext()) {
                scan.next();
                FileNumberOfWords++;
            }
            fr.close();


        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfWords;
    }

    public int NumberOfLettersWithSpace(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfLettersWithSpace = 1;
            while (scan.hasNextLine()) {
                String line = scan.nextLine();
                String[] number = line.split("");
                for (int i = 0; i < number.length; i++) {
                    int c = number[i].length();
                    FileNumberOfLettersWithSpace = c + FileNumberOfLettersWithSpace;
                }
            }
            fr.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfLettersWithSpace;
    }

    public int NumberOfLetters(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfLetters = 0;
            while (scan.hasNextLine()) {
                String line = scan.nextLine();
                String[] number = line.split(" ");
                for (int i = 0; i < number.length; i++) {
                    int c = number[i].length();
                    FileNumberOfLetters = c + FileNumberOfLetters;
                }
            }


            fr.close();


        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfLetters;
    }


    public int NumberOfLines(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            FileNumberOfLines = 0;
            while (NumberOfLinesReader.readLine() != null) {
                FileNumberOfLines++;
            }
            fr.close();

        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
        return FileNumberOfLines;
    }


    public int NumberOfDots(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfDots = 0;
            while (scan.hasNextLine()) {
                String line = scan.nextLine();
                String[] number = line.split("");
                for (int i = 0; i < number.length; i++) {
                    if (number[i].equals(",") || number[i].equals(".")) {
                        FileNumberOfDots++;
                    }

                }
            }


            fr.close();


        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfDots;
    }


    public int NumberOfSpace(String NameOfFile) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfSpace = 0;
            while (scan.hasNextLine()) {
                String line = scan.nextLine();
                String[] number = line.split("");
                for (int i = 0; i < number.length; i++) {
                    if (number[i].equals(" ")) {
                        FileNumberOfSpace++;
                    }

                }
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfSpace;
    }

    public int NumberOfYourSimbol(String NameOfFile, String WhatsSimbolPersonWant) throws IOException {
        try {
            FileReader fr = new FileReader("C:\\Users\\Мюриель\\Desktop\\WorkDock\\" + NameOfFile + ".txt");
            LineNumberReader NumberOfLinesReader = new LineNumberReader(fr);
            Scanner scan = new Scanner(fr);
            FileNumberOfYourSimbol = 0;
            while (scan.hasNextLine()) {
                String line = scan.nextLine();
                String[] number = line.split("");
                for (int i = 0; i < number.length; i++) {
                    if (number[i].equals(WhatsSimbolPersonWant)) {
                        FileNumberOfYourSimbol++;
                    }

                }
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
        return FileNumberOfYourSimbol;
    }
}
